{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@extensible-angular-app/content": ["libs/content/src/index.ts"],
      "@extensible-angular-app/custom-template": [
        "libs/custom-template/src/index.ts"
      ],
      "@extensible-angular-app/apa-template": [
        "libs/apa-template/src/index.ts"
      ],
      "@extensible-angular-app/custom-template/*": ["libs/custom-template/*"],
      "@extensible-angular-app/process": ["libs/process/src/index.ts"],
      "@extensible-angular-app/sdk": ["libs/sdk/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
